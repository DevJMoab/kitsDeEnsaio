{% extends "layout.njk" %}

{% block head %}

<title>Kits</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}


{% block content %}

<div class="titulo">
    <h1>Kits para Ensaio</h1>
</div>

<section class="cards">

    {% for item in items %}

    <div class="card" id="{{item.id}}">
        <div class="card_img_container {{'featured-wrapper' if item.featured }}  ">
            <img src="{{item.img}}" alt="{{item.title}}">
            {% if item.featured %}
            <div class="featured">Novo</div>
            {% endif %}
        </div>
        <div class="card_content">
            <p>{{item.title}}</p>
        </div>
        <div class="card_info">
            <p>{{item.duration}}</p>
            <p class="card_price">{{item.price}}</p>
        </div>

    </div>

    {% endfor %}

</section>
